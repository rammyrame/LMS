@using Graduation_Project.Models.Entity;
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Graduation_Project.Models.Entity.TBLUSERS>
@*@model List<Graduation_Project.Models.Entity.TBLUSERS>*@
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

<h2>Users</h2>

<table class="table table-bordered">
    <tr>
        <th>User ID</th>
        <th>User Name</th>
        <th>User Surname</th>
        <th>Mail</th>
        <th>Username</th>
        <th>Password</th>
        <th>Phone</th>
        <th>School</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>
    @foreach (var us in Model)
    {
        <tr>
            <td>@us.ID</td>
            <td>@us.NAME</td>
            <td>@us.SURNAME</td>
            <td>@us.MAIL</td>
            <td>@us.USERNAME</td>
            <td>@us.PASSWORD</td>
            <td>@us.PHONE</td>
            <td>@us.SCHOOL</td>
            <td><a href="/Users/UsersDelete/@us.ID" class="btn btn-danger">Delete</a></td>
            <td><a href="/Users/UsersCall/@us.ID" class="btn btn-success">Update</a></td>
        </tr>
    }
</table>

@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))

<a href="/Users/UsersAdd/" class="btn btn-primary">Add New User</a>