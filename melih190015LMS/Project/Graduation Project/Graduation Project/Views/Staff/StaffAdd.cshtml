@model Graduation_Project.Models.Entity.TBLSTAFF
@{
    ViewBag.Title = "StaffAdd";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

<h2>StaffAdd</h2>

<form class="form-group" method="post">
    <div></div>
    <div style="margin-top:15px">
        <label>Staff Name</label>
        @*<input type="text" class="form-control" name="STAFF" />*@
        @Html.TextBoxFor(x => x.STAFF, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.STAFF, "", new { @style = "color:red" })
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-info" id="Btn1">Add New Staff</button>
    </div>
</form>