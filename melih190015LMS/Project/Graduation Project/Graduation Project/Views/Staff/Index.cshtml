@using Graduation_Project.Models.Entity;
@model List<Graduation_Project.Models.Entity.TBLSTAFF>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

<h2>Staff</h2>

<table class="table table-bordered">
    <tr>
        <th>Staff ID</th>
        <th>Staff NAME</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>
    @foreach (var stf in Model)
    {
        <tr>
            <td>@stf.ID</td>
            <td>@stf.STAFF</td>
            <td><a href="/Staff/StaffDelete/@stf.ID" class="btn btn-danger">Delete</a></td>
            <td><a href="/Staff/StaffCall/@stf.ID" class="btn btn-success">Update</a></td>
        </tr>
    }
</table>
<a href="/Staff/StaffAdd/" class="btn btn-primary">Add New Staff</a>