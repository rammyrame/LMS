@using Graduation_Project.Models.Entity
@model List<TBLMOVEMENT>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}


<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

<h2>Returned Book List</h2>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Book Name</th>
        <th>Name</th>
        <th>Staff</th>
        <th>Purchase Date</th>
        <th>User Returned Date</th>
        <th>Details</th>
    </tr>
    @foreach (var z in Model)
    {
        <tr>
            <td>@z.ID</td>
            <td>@z.TBLBOOK.NAME</td>
            <td>@z.TBLUSERS.NAME @z.TBLUSERS.SURNAME</td>
            <td>@z.TBLSTAFF.STAFF</td>
            <td>@Convert.ToDateTime(z.PURCHASEDATE).ToString("dd/MM/yyyy")</td>
            <td>@Convert.ToDateTime(z.RETURNEDDATE).ToString("dd/MM/yyyy")</td>
            <td><a href="/Lend/ReturnTheLoan/@z.ID" class="btn btn-danger">Details</a></td>
        </tr>
    }
</table>