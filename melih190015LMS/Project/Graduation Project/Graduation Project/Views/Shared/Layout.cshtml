
@{
    Layout = null;
}


<!DOCTYPE html>

<html>

<head>

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">


    <style>

        body {
            font-family: "Lato", sans-serif;
        }



        .sidebar {
            height: 100%;
            width: 240px;
            position: fixed;
            z-index: 1;
            top: 0;
            left: 0;
            background-color: #111;
            overflow-x: hidden;
            padding-top: 16px;
        }



            .sidebar a {
                padding: 10px 14px 10px 10px;
                text-decoration: none;
                font-size: 18px;
                color: white;
                display: block;
            }



                .sidebar a:hover {
                    color: #0094ff;
                }



        .main {
            margin-left: 240px; /* Same as the width of the sidenav */

            padding: 0px 10px;
        }



        @@media screen and (max-height: 450px) {

            .sidebar {
                padding-top: 15px;
            }



                .sidebar a {
                    font-size: 18px;
                }
        }
    </style>

</head>

<body>



    <div class="sidebar">
        <a href="#"><i class="bi bi-house-door"></i> &nbsp; Home Page</a>
        <a href="/Category/Index/"><i class="bi bi-list"></i> &nbsp; Categories</a>
        <a href="/Book/Index"><i class="bi bi-book"></i> &nbsp; Books</a>
        <a href="/Author/Index/"><i class="bi bi-pencil"></i> &nbsp; Authors</a>
        <a href="/Users/Index/"><i class="bi bi-person"></i> &nbsp; Users</a>
        <a href="/Staff/Index/"><i class="bi bi-star"></i> &nbsp; Staff</a>
        <a href="/Lend/Lend/"><i class="bi bi-arrow-right-circle"></i> &nbsp; Lend a Book</a>
        <a href="/Lend/Index/"><i class="bi bi-arrow-left-circle"></i> &nbsp; Borrow a Book</a>
        <a href="#"><i class="bi bi-currency-dollar"></i> &nbsp; Cash Box</a>
        <a href="#"><i class="bi bi-speedometer"></i> &nbsp; Operations</a>
        <a href="#"><i class="bi bi-wrench"></i> &nbsp; Settings</a>
        <a href="#"><i class="bi bi-phone"></i> &nbsp; Help</a>
        <a href="#"><i class="bi bi-box-arrow-right"></i> &nbsp; Exit</a>


    </div>



    <div class="main">

        @RenderBody()

    </div>



</body>

</html>