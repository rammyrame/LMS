@model Graduation_Project.Models.Entity.TBLAUTHOR
@{
    ViewBag.Title = "AuthorCall";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<h2>AuthorCall</h2>

@using (Html.BeginForm("UpdateAuthor", "Author", FormMethod.Post))
{
    <div style="margin-top:15px"></div>
    <div class=" form-group">
        <div style="margin-bottom:15px">
            <label>Author ID</label>
            @Html.TextBoxFor(y => y.ID, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px">
            <label>Author Name</label>
            @Html.TextBoxFor(y => y.NAME, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px">
            <label>Author Surname</label>
            @Html.TextBoxFor(y => y.SURNAME, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px">
            <label>Author Details</label>
            @Html.TextAreaFor(y => y.DETAILS, new { @class = "form-control" })
        </div>
        <button class="btn btn-warning">Update Author Information</button>
    </div>
}