@model Graduation_Project.Models.Entity.TBLAUTHOR
@{
    ViewBag.Title = "AddAuthor";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

<form class="form-group" method="post">
    <div></div>
    <div style="margin-top:15px">
        <label>Author Name</label>
        @Html.TextBoxFor(y => y.NAME, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label style="display:block">Author Surname</label>
        @Html.TextBoxFor(y => y.SURNAME, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label style="display:block">Details</label>
        @Html.TextAreaFor(y => y.DETAILS, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-info">Author Add</button>
    </div>
</form>