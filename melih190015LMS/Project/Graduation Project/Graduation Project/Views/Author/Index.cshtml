@using Graduation_Project.Models.Entity
@model List<TBLAUTHOR>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

<h2>Authors</h2>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Surname</th>
        <th>Details</th>
        <th>Delete</th>
        <th>Update</th>
        <th></th>
    </tr>
    @foreach (var aut in Model)
    {
        <tr>
            <td>@aut.ID</td>
            <td>@aut.NAME</td>
            <td>@aut.SURNAME</td>
            <td>@aut.DETAILS</td>
            <td>@Html.ActionLink("Delete", "DeleteAuthor", new { id = aut.ID }, new { @class = "btn btn-danger", onclick = "return confirm('Do you want delete?')" })</td>
            <td><a href="/Author/AuthorCall/@aut.ID" class="btn btn-success">Update</a></td>
        </tr>
    }
</table>
<a class="btn btn-primary" href="/Author/AddAuthor">Add New Author</a>