@using Graduation_Project.Models.Entity;
@model List<Graduation_Project.Models.Entity.TBLCATEGORY>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

<h2> Categories </h2>

<table class="table table-bordered">
    <tr>
        <th>Category ID</th>
        <th>Category NAME</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>
    @foreach (var category in Model)
    {
        <tr>
            <td>@category.ID</td>
            <td>@category.NAME</td>
            <td><a href="/Category/CategoryDelete/@category.ID" class="btn btn-danger">Delete</a></td>
            <td><a href="/Category/CategoryCall/@category.ID" class="btn btn-success">Update</a></td>
        </tr>
    }
</table>
<a href="/Category/CategoryAdd/" class="btn btn-primary">Add New Category</a>