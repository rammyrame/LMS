@using Graduation_Project.Models.Entity
@model List<TBLBOOK>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

<h2>Index</h2>

@using (Html.BeginForm("Find", "Book", FormMethod.Get))
            {
                <div style="margin-bottom:15px; margin-top:15px;">
                    <b>Enter the book name to search for: </b> @Html.TextBox("p")
                    <input type="submit" value="Find" />
                </div>
            }

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Book Name</th>
        <th>Book Author</th>
        <th>Category</th>
        <th>Printed Year</th>
        <th>Publisher</th>
        <th>Page</th>
        <th>Situation</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>
    @foreach(var b in Model)
            {
                <tr>
                    <td>@b.ID</td>
                    <td>@b.NAME</td>
                    <td>@b.TBLAUTHOR.NAME @b.TBLAUTHOR.SURNAME</td>
                    <td>@b.TBLCATEGORY.NAME</td>
                    <td>@b.PRINTEDYEAR</td>
                    <td>@b.PUBLISHER</td>
                    <td>@b.PAGE</td>
                    <td>@b.SITUATION</td>
                    <td><a href="/Book/DeleteBook/@b.ID" class="btn btn-danger">Delete</a></td>
                    <td><a href="/Book/BookCall/@b.ID" class="btn btn-success">Update</a></td>
                </tr>
            }
</table>
<a href="/Book/AddBook/" class="btn btn-primary">New Add Book</a>