@model Graduation_Project.Models.Entity.TBLMOVEMENT

@{
    ViewBag.Title = "ReturnTheLoan";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<h2>ReturnTheLoan</h2>

@using (Html.BeginForm("LoanUpdate", "Lend", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        @Html.LabelFor(s => s.ID)
        @Html.TextBoxFor(s => s.ID, new { @class = "form-control" })
        <br />
        <label>Book Name</label>
        @Html.TextBoxFor(s => s.TBLBOOK.NAME, new { @class = "form-control" })
        <br />
        <label>User</label>
        @Html.TextBoxFor(s => s.TBLUSERS.NAME, new { @class = "form-control" })
        <br />
        <label>Staff</label>
        @Html.TextBoxFor(s => s.TBLSTAFF.STAFF, new { @class = "form-control" })
        <br />
        <label>Purchase Date</label>
        @Html.TextBoxFor(s => s.PURCHASEDATE, "{0: dd.MM.yyyy}", new { @class = "form-control" })
        <br />
        <label>Return Date</label>
        @Html.TextBoxFor(s => s.RETURNDATE, "{0: dd.MM.yyyy}", new { @class = "form-control" })
        <br />
        <label>Date the User Returned</label>
        <input type="text" class="form-control" name="RETURNEDDATE" value="@DateTime.Now.ToShortDateString()" />
    </div>
    <div>
        <button class="btn btn-info">Lend a Book</button>
    </div>
}
